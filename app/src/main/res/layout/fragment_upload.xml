<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/custom_black"
    android:keepScreenOn="true"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/initialMessageViewTxt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="20dp"
            android:text="@string/user_instruction"
            android:textColor="@color/custom_grey"
            android:textSize="25sp" />

        <GridView
            android:id="@+id/selectedImagesGrid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnWidth="100dp"
            android:gravity="center"
            android:horizontalSpacing="0.5dp"
            android:numColumns="auto_fit"
            android:padding="1dp"
            android:stretchMode="columnWidth"
            android:verticalSpacing="0.5dp" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/custom_yellow"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cameraViewBt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:layout_weight="1"
            android:background="@drawable/button_selector"
            android:fontFamily="sans-serif"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="Camera"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="14sp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/galleryViewBt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:layout_weight="1"
            android:background="@drawable/button_selector"
            android:fontFamily="sans-serif"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="Images"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="14sp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/videoviewBt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:layout_weight="1"
            android:background="@drawable/button_selector"
            android:fontFamily="sans-serif"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="Videos"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="14sp"
            android:textStyle="bold" />




        <Button
            android:id="@+id/deleteViewBt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:layout_weight="1"
            android:alpha="0.5"
            android:background="@drawable/button_selector"
            android:enabled="false"
            android:fontFamily="sans-serif"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="Delete"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>
