<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/vei"
                    android:layout_width="fill_parent"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:background="@color/custom_yellow"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="Vehicle Entry Images*"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/view_vei"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:background="@color/custom_yellow"
                    app:tint="@color/white"
                    android:padding="25dp"
                    android:visibility="gone"
                    android:src="@drawable/ic_baseline_remove_red_eye_24" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/dci"
                    android:layout_width="fill_parent"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:background="@color/custom_yellow"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="DC Images*"
                    android:textColor="@color/white"
                    android:textSize="18sp" />


                <ImageView
                    android:id="@+id/view_dci"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:background="@color/custom_yellow"
                    app:tint="@color/white"
                    android:padding="25dp"
                    android:visibility="gone"
                    android:src="@drawable/ic_baseline_remove_red_eye_24" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/vnpi"
                    android:layout_width="fill_parent"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:background="@color/custom_yellow"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="Vehicle Number Plate Images*"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/view_vnpi"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:background="@color/custom_yellow"
                    android:padding="25dp"
                    app:tint="@color/white"
                    android:visibility="gone"
                    android:src="@drawable/ic_baseline_remove_red_eye_24" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/vui"

                    android:layout_width="fill_parent"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:background="@color/custom_yellow"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="Vehicle Unloading Images"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/view_vui"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:background="@color/custom_yellow"
                    android:padding="25dp"
                    app:tint="@color/white"
                    android:visibility="gone"
                    android:src="@drawable/ic_baseline_remove_red_eye_24" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/vbi"
                    android:layout_width="fill_parent"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:background="@color/custom_yellow"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="Vehicle Empty Images*"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/view_vbi"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:background="@color/custom_yellow"
                    android:padding="25dp"
                    app:tint="@color/white"
                    android:visibility="gone"
                    android:src="@drawable/ic_baseline_remove_red_eye_24" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/mi"
                    android:layout_width="fill_parent"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:background="@color/custom_yellow"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="More Images"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/view_mi"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:background="@color/custom_yellow"
                    android:padding="25dp"
                    app:tint="@color/white"
                    android:visibility="gone"
                    android:src="@drawable/ic_baseline_remove_red_eye_24" />

            </LinearLayout>


        </LinearLayout>


    </ScrollView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/custom_yellow"
        android:orientation="horizontal">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/save_draft"
            android:text="Save as Draft"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:background="@color/white" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Submit"
            android:id="@+id/sumbit_status"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>


</RelativeLayout>